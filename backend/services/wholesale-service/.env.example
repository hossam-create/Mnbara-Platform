# Wholesale Service Environment Variables
# متغيرات البيئة لخدمة البيع بالجملة

# Server
PORT=3026
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/wholesale_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-jwt-secret

# Services
AUTH_SERVICE_URL=http://localhost:3001
PAYMENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3006

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/uploads

# Logging
LOG_LEVEL=info
