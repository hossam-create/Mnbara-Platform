# Crypto Service Environment Variables

# Server
PORT=3018
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/mnbara_crypto?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Coinbase Commerce (for payment processing)
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_WEBHOOK_SECRET=your-coinbase-webhook-secret

# Ethereum Node (Infura/Alchemy)
ETH_NODE_URL=https://mainnet.infura.io/v3/your-project-id
ETH_TESTNET_URL=https://goerli.infura.io/v3/your-project-id

# Bitcoin Node
BTC_NODE_URL=https://btc.getblock.io/mainnet/
BTC_TESTNET_URL=https://btc.getblock.io/testnet/

# Exchange Rate APIs
COINGECKO_API_KEY=your-coingecko-api-key
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
TWO_FACTOR_ISSUER=Mnbara

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Withdrawal Limits (in USD)
DAILY_WITHDRAWAL_LIMIT=10000
MONTHLY_WITHDRAWAL_LIMIT=100000

# Minimum Deposits
MIN_BTC_DEPOSIT=0.0001
MIN_ETH_DEPOSIT=0.001
MIN_USDC_DEPOSIT=1
MIN_USDT_DEPOSIT=1

# Confirmations Required
BTC_CONFIRMATIONS=3
ETH_CONFIRMATIONS=12

# Logging
LOG_LEVEL=info
