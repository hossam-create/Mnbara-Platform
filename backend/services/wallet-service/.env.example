# Multi-Currency Wallet Service Environment Variables

# Server
PORT=3019
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/mnbara_wallet?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Exchange Rate APIs
OPENEXCHANGERATES_API_KEY=your-openexchangerates-api-key
FIXER_API_KEY=your-fixer-api-key

# Rate Update Interval (in minutes)
RATE_UPDATE_INTERVAL=5

# Default Limits (in USD equivalent)
DEFAULT_DAILY_LIMIT=1000
DEFAULT_MONTHLY_LIMIT=10000

# KYC Limits
KYC_LEVEL_0_DAILY=100
KYC_LEVEL_0_MONTHLY=500
KYC_LEVEL_1_DAILY=1000
KYC_LEVEL_1_MONTHLY=10000
KYC_LEVEL_2_DAILY=10000
KYC_LEVEL_2_MONTHLY=100000

# Conversion Fees (percentage)
CONVERSION_FEE_PERCENTAGE=0.3

# Hedging Premiums (percentage)
HEDGING_FORWARD_PREMIUM=0.5
HEDGING_OPTION_PREMIUM=1.0
HEDGING_STOP_LOSS_PREMIUM=0.3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
