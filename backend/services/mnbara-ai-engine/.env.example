# Mnbara AI Engine Configuration
# إعدادات محرك منبرة للذكاء الاصطناعي

# Server
PORT=3025
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/mnbara_ai_db

# Hugging Face API (for model inference)
HUGGINGFACE_API_KEY=hf_your_api_key_here

# Model Configuration
DEFAULT_LLM_MODEL=mistral-7b
DEFAULT_EMBEDDING_MODEL=all-minilm
MAX_TOKENS=512
TEMPERATURE=0.7

# Voice Configuration
ENABLE_VOICE=true
WAKE_WORD_ENABLED=true
WAKE_WORDS=hey mnbara,يا منبرة,منبرة

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Vector Database (optional - for production)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=mnbara-knowledge

# ChromaDB (alternative vector DB)
CHROMA_URL=http://localhost:8000

# Training Configuration
TRAINING_BATCH_SIZE=8
TRAINING_EPOCHS=3
LORA_RANK=8
LORA_ALPHA=16

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
