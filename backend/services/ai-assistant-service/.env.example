# AI Assistant Service - Gen 10 AI Configuration
# إعدادات خدمة المساعد الذكي - الجيل العاشر

# Server
PORT=3024
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_assistant_db

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Pinecone (Vector Database for Recommendations)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=mnbara-embeddings

# Redis (Caching)
REDIS_URL=redis://localhost:6379

# RabbitMQ (Message Queue)
RABBITMQ_URL=amqp://localhost:5672

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
LISTING_SERVICE_URL=http://localhost:3002
ORDER_SERVICE_URL=http://localhost:3003
USER_SERVICE_URL=http://localhost:3004

# AI Configuration
AI_CHAT_MAX_TOKENS=1000
AI_CHAT_TEMPERATURE=0.7
AI_ANALYSIS_TEMPERATURE=0
AI_TRANSLATION_TEMPERATURE=0.3

# Fraud Detection
FRAUD_BLOCK_THRESHOLD=80
FRAUD_REVIEW_THRESHOLD=60
FRAUD_FLAG_THRESHOLD=30

# Forecast
FORECAST_DEFAULT_DAYS=30
FORECAST_CONFIDENCE_TARGET=0.95

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
