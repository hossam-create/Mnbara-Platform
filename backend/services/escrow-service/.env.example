# Escrow Service Environment Variables

# Server
PORT=3022
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/mnbara_escrow?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Escrow Settings
DEFAULT_INSPECTION_DAYS=3
MAX_INSPECTION_DAYS=14
AUTO_RELEASE_DAYS=7
DISPUTE_WINDOW_DAYS=30

# Fees
ESCROW_FEE_PERCENTAGE=2.5
MIN_ESCROW_FEE=5
MAX_ESCROW_FEE=500
PLATFORM_FEE_PERCENTAGE=1

# Limits
MIN_TRANSACTION_AMOUNT=10
MAX_TRANSACTION_AMOUNT=100000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
