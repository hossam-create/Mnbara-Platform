# Render Environment Variables - MNBara Platform
# Updated: 28 December 2025
# Ready for production deployment

# Core Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (PostgreSQL)
# Will be automatically replaced by Render's database connection
# Format: postgresql://mnbara_user:PASSWORD@dpg-xxxxx.render.internal:5432/mnbara_prod
DATABASE_URL=postgresql://mnbara_user:REPLACE_WITH_PASSWORD@dpg-xxxxx.render.internal:5432/mnbara_prod

# Redis Configuration (Redis Cache)
# Will be automatically replaced by Render's Redis connection
# Format: redis://default:PASSWORD@dpg-xxxxx.render.internal:6379
REDIS_URL=redis://default:REPLACE_WITH_PASSWORD@dpg-xxxxx.render.internal:6379

# Security & Authentication
JWT_SECRET=REPLACE_WITH_YOUR_JWT_SECRET
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# API Configuration
API_URL=https://mnbara-api-gateway.onrender.com
WEB_URL=https://mnbara-web.onrender.com
ADMIN_URL=https://mnbara-admin.onrender.com

# Service URLs (Internal Communication)
AUTH_SERVICE_URL=https://mnbara-auth-service.onrender.com
LISTING_SERVICE_URL=https://mnbara-listing-service.onrender.com
PAYMENT_SERVICE_URL=https://mnbara-payment-service.onrender.com
AUCTION_SERVICE_URL=https://mnbara-auction-service.onrender.com

# Payment Gateway Configuration
STRIPE_SECRET_KEY=REPLACE_WITH_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=REPLACE_WITH_STRIPE_PUBLISHABLE_KEY
PAYPAL_CLIENT_ID=REPLACE_WITH_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=REPLACE_WITH_PAYPAL_CLIENT_SECRET

# Email & Communication
SENDGRID_API_KEY=REPLACE_WITH_SENDGRID_API_KEY
TWILIO_ACCOUNT_SID=REPLACE_WITH_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=REPLACE_WITH_TWILIO_AUTH_TOKEN

# File Storage & CDN
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_ACCESS_KEY
AWS_S3_BUCKET=mnbara-platform-uploads
AWS_REGION=us-east-1

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=REPLACE_WITH_GA_ID
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN

# Blockchain & Web3
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/REPLACE_WITH_INFURA_KEY
SMART_CONTRACT_ADDRESS=REPLACE_WITH_CONTRACT_ADDRESS

# Feature Flags
ENABLE_AUCTIONS=true
ENABLE_CRYPTO_PAYMENTS=false
ENABLE_AR_PREVIEW=true
ENABLE_AI_RECOMMENDATIONS=true

# Performance & Caching
CACHE_TTL=3600
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Development (set to false in production)
DEBUG=false
ENABLE_SWAGGER=false
